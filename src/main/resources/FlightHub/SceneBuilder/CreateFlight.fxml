<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.flighthub.controllers.flight.CreateFlightController"
      style="-fx-padding: 20;">

    <Text text="Create New Flight" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #5067e9;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Flight Number:" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="flightNumberField"/>
            <Label fx:id="flightNumberErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Departure Airport:" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
            <ComboBox fx:id="departureAirportComboBox"/>
            <Label fx:id="departureAirportErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Aircraft:" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
            <ComboBox fx:id="aircraftComboBox"/>
            <Label fx:id="aircraftErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Arrival Airport:" GridPane.rowIndex="3" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="3">
            <ComboBox fx:id="arrivalAirportComboBox"/>
            <Label fx:id="arrivalAirportErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Departure Date:" GridPane.rowIndex="4" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="4">
            <DatePicker fx:id="departureDatePicker"/>
            <Label fx:id="departureDateErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Departure Time:" GridPane.rowIndex="5" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="5">
            <ComboBox fx:id="departureTimeComboBox"/>
            <Label fx:id="departureTimeErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Arrival Date:" GridPane.rowIndex="6" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="6">
            <DatePicker fx:id="arrivalDatePicker"/>
            <Label fx:id="arrivalDateErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Arrival Time:" GridPane.rowIndex="7" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="7">
            <ComboBox fx:id="arrivalTimeComboBox"/>
            <Label fx:id="arrivalTimeErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>

        <Label text="Price:" GridPane.rowIndex="8" style="-fx-font-size: 14px;"/>
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="8">
            <TextField fx:id="priceField"/>
            <Label fx:id="priceErrorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
        </VBox>
    </GridPane>

    <Button fx:id="createButton" text="Create" style="-fx-background-color: #5067e9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;"/>

</VBox>