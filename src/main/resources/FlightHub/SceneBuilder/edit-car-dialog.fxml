<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flighthub.controllers.car.EditCarDialogController">
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Brand:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="brandField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Model:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="License Plate:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="licensePlateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Price per Day:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save" onAction="#handleSave" defaultButton="true"/>
</VBox>