<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.time.LocalDate?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flighthub.controllers.car.RentCarController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Rent a Car" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Customer Name:"/>
                <TextField fx:id="customerNameField" promptText="Enter customer name"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Rental Date:"/>
                <DatePicker fx:id="rentalDatePicker"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Rental Days:"/>
                <TextField fx:id="rentalDaysField" promptText="Enter rental days"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Select Car:"/>
                <ComboBox fx:id="carComboBox" promptText="Select a car"/>
            </HBox>

            <Button text="Rent Car" onAction="#handleRentCar"/>
            <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
        </VBox>
    </center>
</BorderPane>