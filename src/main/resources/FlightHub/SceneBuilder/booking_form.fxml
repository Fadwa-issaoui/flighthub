                            <!-- Flight Path Arrow -->
                            <Line endX="190.0" endY="12.0" startX="130.0" startY="12.0" stroke="black" strokeWidth="2.0" />
                            <Label layoutX="155.0" layoutY="-2.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5067E9;" text="âœˆ" />

