                            <Label layoutX="320.0" layoutY="0.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Date:" />
                            <Label fx:id="dateLabel" layoutX="355.0" layoutY="0.0" style="-fx-font-size: 14px; -fx-text-fill: #5067E9;" text="[Date]" />

                        </AnchorPane>
                    </AnchorPane>
                </AnchorPane>

